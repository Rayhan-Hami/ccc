#include<stdio.h>

int main(void)
{
    int n,i;

    double sum,multi,x;

    char ch;

    sum=0;

    multi=1;


    printf("Enter An Operator: ");
    scanf("%c",&ch);

    switch(ch)
    {
        case '+':
            scanf("%d",&n);
            for(i=0;i<n;i++)
            {
                scanf("%lf",&x);

                    sum=sum+x;
            }
            printf("The Sum Is= %.2lf",sum);
            break;
        case '*':
            scanf("%d",&n);
            for(i=0;i<n;i++)
            {
                scanf("%lf",&x);

                multi=multi*x;
            }
            printf("The Multiplication Is= %.2lf",multi);
            break;
        default:
            printf("ERROR 404");

    }
        return 0;
}
